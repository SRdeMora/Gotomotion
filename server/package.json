{
  "name": "go2motion-backend",
  "version": "1.0.0",
  "description": "Backend API para Go2Motion Awards",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "npm run db:generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:switch-sqlite": "node scripts/switch-to-sqlite.js",
    "db:switch-postgresql": "node scripts/switch-to-postgresql.js",
    "check-admin": "node scripts/check-admin-config.js",
    "setup-admin": "node scripts/check-admin-config.js",
    "render:init-db": "npm run db:push || true"
  },
  "keywords": ["api", "backend", "go2motion"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sentry/node": "^8.40.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "stripe": "^17.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}

